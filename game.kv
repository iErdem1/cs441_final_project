<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    ball: ball
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 50
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 50
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

    Ball:
        id: ball
        center: self.parent.center